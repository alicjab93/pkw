<div class="page-header">
<h1>Komitety</h1>
</div>

<div class="col-lg-offset-11">
  &nbsp; <%= link_to '<span class="glyphicon glyphicon-plus"></span> dodaj'.html_safe, new_committee_path, class: "btn btn-success btn-xs" %>
</div>


<div class="bs-component">
  <table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @committees.each do |committee| %>
      <tr>
        <td><%= committee.name %></td>
        <td><%= committee.logo %></td>
        <td class="col-md-1"><a href="<%= url_for :action => 'show', :id => committee.id %>" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-eye-open"></span> pokaż</a></td>
          <td class="col-md-1"><a href="<%= edit_committee_path(committee) %>" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span>  edytuj</a></td>
          <td class="col-md-1"><%= link_to '<span class="glyphicon glyphicon-remove"></span> usuń'.html_safe, committee, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


