<%= form_for @province, :html => {:class => "form-horizontal"} do |f| %>

  <%= render 'layouts/errors', object: @province %>

<div class="col-sm-6">
  <div class="form-group">
      <%= f.label :name, class: "control-label col-sm-4" %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control", :required => true %>      
    </div>
  </div>

  <div class="form-group">
      <%= f.label :committees, class: "control-label col-sm-4" %>
    <div class="col-sm-6" >
      <select id="committee_ids" size="8" class="form-control" name="committee_ids[]" multiple="multiple">
            <%= options_for_select(@committees, @province.committees.collect {|d| d.id }) %>
      </select>    
    </div>
  </div>  
 

 <div class="form-group action">
  <div class="col-sm-4 control-label">
    <%= link_to '<span class="glyphicon glyphicon-arrow-left"></span> powrót'.html_safe, provinces_path, class: "btn btn-sm btn-primary" %>
  </div>
  <div class="col-sm-4">
    <%= f.submit 'zapisz województwo', class: "btn btn-default form-control" %>
  </div>
 </div>
</div>
<% end %>
