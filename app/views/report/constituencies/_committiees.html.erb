<div class="bs-component">
  <table class="table table-striped table-hover ">
    <thead>
      <tr> 
        <th>Nazwa komitetu</th>      
        <th>Liczba uzyskanych głosów ważnych</th> 
        <th>Procent głosów ważnych</th>
      </tr>
    </thead>

    <tbody>
      <% @valid_votes.each do |valid_vote| %>
        <tr>         
          <td><%= valid_vote.committee.name %></td>
          <td><%= valid_vote.quantity %></td>
          <td><%= number_to_percentage(Float(valid_vote.quantity)/(@valid_votes_sum) * 100, precision: 2) %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
          <td>Suma:</td>
          <td><%= @valid_votes_sum %></td>  
          <td>100%</td>
      </tr>
    </tfoot>
  </table>
</div>